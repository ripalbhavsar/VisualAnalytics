{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "width": 500,
  "data": { "url": "https://raw.githubusercontent.com/ripalbhavsar/VisualAnalytics/master/losses2015_transformed.csv"},
  "title": "Losses in US in 2015",
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "Damage_Descp", "type": "ordinal", "title": "Damage Description", "sort": {"op": "sum", "field": "Amount", "order": "ascending"}
    },
    "x": {
      "aggregate": "sum", "field": "Amount", "type": "quantitative", "title": "Total Loss in 2015 in US Dollars" 
    }
  }
}

{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 960,
  "height": 500,
  "autosize": "none",
  "data": [
    {
      "name": "losses",
      "url": "https://raw.githubusercontent.com/ripalbhavsar/VisualAnalytics/master/losses2015_transformed.csv",
      "format": {"type": "csv", "parse": "auto"},
      "transform": [
        {
          "type": "aggregate",
          "fields": ["Amount"],
          "groupby": ["State_Code", "State_Abv"],
          "ops": ["sum"],
          "as": ["Amount"]
        }
      ]
    },
    {
      "name": "states",
      "url": "https://raw.githubusercontent.com/ripalbhavsar/VisualAnalytics/master/us-10m.json",
      "format": {"type": "topojson", "feature": "states"},
      "transform": [
        {
          "type": "lookup",
          "from": "losses",
          "key": "State_Code",
          "fields": ["id"],
          "values": ["State_Code", "State_Abv", "Amount" ]
        },
        {"type": "filter", "expr": "datum.Amount != null"}
      ]
    }
  ],
  
  "scales": [
    {
      "name": "color",
      "type": "quantize",
      "domain": [0, 500000000],
      "range": {"scheme": "blues", "count": 50}
    }
  ],

  "projections": [{"name": "projection", "type": "albersUsa"}],

  "marks": [
    {
      "type": "shape",
      "from": {"data": "states"},
      "encode": {
        "enter": {
          "tooltip": {
            "signal": "'State:'+ datum.State_Abv + ' ' + ' Amount:' + format(datum.Amount,',d')"
          }
        },
        "update": {"fill": {"scale": "color", "field": "Amount"}}
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    }
  ]
}